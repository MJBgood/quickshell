{
  "paths": {
    "themesPath": null,
    "configPath": null
  },
  "ui": {
    "panels": {
      "height": 24,
      "borderRadius": 6,
      "margin": 6,
      "spacing": 3
    },
    "menus": {
      "width": 280,
      "itemHeight": 28,
      "maxHeight": 350,
      "borderRadius": 6,
      "margin": 8
    },
    "timing": {
      "updateInterval": 2000,
      "hoverDelay": 800,
      "autoHideDelay": 5000,
      "animationDuration": 300
    },
    "scaling": {
      "globalScale": 1,
      "useCustomScaling": true,
      "customScales": {
        "padding": 0.7,
        "margin": 0.7,
        "font": 0.8,
        "borderRadius": 0.7,
        "icon": 0.75,
        "spacing": 0.7
      },
      "preset": "compact-laptop"
    },
    "monitors": {
      "cpu": {
        "precisionDigits": 1,
        "warningThreshold": 80,
        "criticalThreshold": 95,
        "pollingRate": 1
      },
      "ram": {
        "precisionDigits": 0,
        "warningThreshold": 70,
        "criticalThreshold": 85,
        "pollingRate": 1
      },
      "storage": {
        "precisionDigits": 1,
        "warningThreshold": 80,
        "criticalThreshold": 90,
        "pollingRate": 60
      },
      "gpu": {
        "pollingRate": 1
      }
    },
    "widgets": {
      "global": {
        "height": "auto",
        "width": "auto",
        "margin": "auto",
        "padding": "auto",
        "borderRadius": "auto",
        "spacing": "auto"
      },
      "systray": {
        "enabled": true,
        "iconSize": 16,
        "spacing": 3,
        "layout": "horizontal",
        "showTooltips": true,
        "alwaysShow": true,
        "showEmpty": true
      }
    }
  },
  "theme": {
    "activeTheme": "catppuccin",
    "activeMode": "dark",
    "followSystemTheme": false,
    "autoSwitchTimes": {
      "enabled": false,
      "lightModeStart": "06:00",
      "darkModeStart": "18:00"
    }
  },
  "panel": {
    "height": 24,
    "position": "top",
    "autohide": false,
    "opacity": 0.95
  },
  "widgets": {
    "clock": {
      "enabled": true,
      "format": "HH:mm",
      "showDate": true
    },
    "workspaces": {
      "enabled": true,
      "showEmpty": true,
      "showNumbers": true
    },
    "systray": {
      "enabled": true,
      "spacing": 4,
      "iconSize": 20,
      "layout": "horizontal",
      "showTooltips": true,
      "autoHide": false,
      "showEmpty": false
    },
    "battery": {
      "enabled": null,
      "showIcon": true,
      "showPercentage": true,
      "showTime": false,
      "autoHideOnDesktop": true,
      "autoShowOnLaptop": true
    }
  },
  "shortcuts": {
    "launcher": "Super+Space",
    "overview": "Super+Tab",
    "settings": "Super+Comma"
  },
  "system": {
    "type": "laptop",
    "updateInterval": 2000,
    "showSystemStats": true,
    "enableNotifications": true
  },
  "performance": {
    "enabled": true,
    "layout": "horizontal",
    "displayMode": "compact",
    "cpu": {
      "enabled": true,
      "precision": 1,
      "updateInterval": 2000,
      "showIcon": true,
      "showLabel": false,
      "showPercentage": true,
      "showFrequency": false,
      "customIcon": ""
    },
    "ram": {
      "enabled": true,
      "precision": 0,
      "updateInterval": 2000,
      "showIcon": true,
      "showLabel": false,
      "showPercentage": true,
      "showFrequency": false,
      "showTotal": true,
      "customIcon": ""
    },
    "storage": {
      "enabled": true,
      "precision": 0,
      "updateInterval": 30000,
      "showIcon": true,
      "showLabel": false,
      "showPercentage": true,
      "showBytes": false,
      "customIcon": ""
    }
  },
  "developer": {
    "debugMode": false,
    "showPerformanceMetrics": true,
    "verboseLogging": false
  },
  "scaling": {
    "globalScale": 1,
    "defaults": {
      "typography": "md",
      "spacing": "md",
      "icon": "md"
    }
  },
  "entities": {
    "clockWidget": {
      "showDate": true,
      "separator": "|",
      "timeFormat": "HH:mm",
      "dateFormat": "MMM dd",
      "fontSize": "xs",
      "spacing": "auto",
      "showSeconds": false
    },
    "wallpaperSelector": {
      "fontSize": "sm",
      "spacing": "sm"
    },
    "powerWidget": {
      "showIcon": true,
      "showText": false,
      "iconColor": "auto",
      "fontSize": "sm",
      "spacing": "auto"
    },
    "cpuWidget": {
      "showIcon": true,
      "showPercentage": true,
      "showLabel": true,
      "showTemperature": true,
      "usagePrecision": 1,
      "temperaturePrecision": 0,
      "frequencyPrecision": 0,
      "fontSize": "xs"
    },
    "ramWidget": {
      "showIcon": true,
      "showPercentage": true,
      "showLabel": true,
      "showTotal": true,
      "usagePrecision": 0,
      "memoryPrecision": 1,
      "fontSize": "xs"
    },
    "storageWidget": {
      "showIcon": true,
      "showPercentage": true,
      "showLabel": true,
      "showBytes": false,
      "usagePrecision": 0,
      "storagePrecision": 1,
      "fontSize": "xs"
    },
    "gpuTempWidget": {
      "enabled": true,
      "showIcon": true,
      "showValue": true,
      "showUnit": true,
      "fontSize": "xs"
    },
    "batteryWidget": {
      "enabled": true,
      "showIcon": true,
      "showPercentage": true,
      "showTime": false,
      "fontSize": "xs"
    },
    "brightnessWidget": {
      "enabled": true,
      "showIcon": true,
      "showPercentage": true,
      "showSlider": false,
      "fontSize": "xs"
    },
    "audioWidget": {
      "enabled": true,
      "showIcon": true,
      "showPercentage": true,
      "showSlider": false,
      "fontSize": "xs"
    },
    "gpuWidget": {
      "showIcon": true,
      "showPercentage": true,
      "showLabel": true,
      "showMemory": false,
      "showClocks": false,
      "usagePrecision": 1,
      "memoryPrecision": 1,
      "clockPrecision": 0,
      "fontSize": "xs"
    },
    "barWidget": {
      "height": 24,
      "spacing": "xs",
      "margin": "md",
      "borderRadius": 6,
      "fontSize": "lg"
    },
    "workspacesWidget": {
      "fontSize": "sm",
      "iconSize": "sm",
      "spacing": "auto"
    }
  },
  "clock": {
    "showDate": true
  },
  "cpu": {
    "showLabel": true,
    "showIcon": false,
    "showFrequency": false,
    "showTemperature": true
  },
  "ram": {
    "showLabel": true,
    "showIcon": false,
    "showPercentage": false
  },
  "storage": {
    "showLabel": false,
    "showIcon": true,
    "showBytes": true,
    "showPercentage": false,
    "precision": 0,
    "labelText": "Storage",
    "units": "TB",
    "storagePrecision": 1
  },
  "gpu": {
    "showLabel": true,
    "showMemory": false,
    "showClocks": false,
    "showIcon": false
  }
}
