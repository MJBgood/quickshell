{
  "paths": {
    "themesPath": null,
    "configPath": null
  },
  "ui": {
    "panels": {
      "height": 32,
      "borderRadius": 8,
      "margin": 10,
      "spacing": 4
    },
    "menus": {
      "width": 300,
      "itemHeight": 36,
      "maxHeight": 400,
      "borderRadius": 8,
      "margin": 10
    },
    "timing": {
      "updateInterval": 2000,
      "hoverDelay": 800,
      "autoHideDelay": 5000,
      "animationDuration": 300
    },
    "monitors": {
      "cpu": {
        "precisionDigits": 1,
        "warningThreshold": 80,
        "criticalThreshold": 95
      },
      "ram": {
        "precisionDigits": 0,
        "warningThreshold": 70,
        "criticalThreshold": 85
      },
      "storage": {
        "precisionDigits": 1,
        "warningThreshold": 80,
        "criticalThreshold": 90
      }
    }
  },
  "theme": {
    "activeTheme": "catppuccin",
    "activeMode": "dark",
    "followSystemTheme": false,
    "autoSwitchTimes": {
      "enabled": false,
      "lightModeStart": "06:00",
      "darkModeStart": "18:00"
    }
  },
  "panel": {
    "height": 32,
    "position": "top",
    "autohide": false,
    "opacity": 0.95
  },
  "widgets": {
    "clock": {
      "enabled": true,
      "format": "HH:mm",
      "showDate": false
    },
    "workspaces": {
      "enabled": true,
      "showEmpty": true,
      "showNumbers": true
    },
    "systray": {
      "enabled": true,
      "spacing": 4
    }
  },
  "shortcuts": {
    "launcher": "Super+Space",
    "overview": "Super+Tab",
    "settings": "Super+Comma"
  },
  "system": {
    "updateInterval": 2000,
    "showSystemStats": true,
    "enableNotifications": true
  },
  "performance": {
    "enabled": true,
    "layout": "horizontal",
    "displayMode": "minimal",
    "cpu": {
      "enabled": true,
      "precision": 1,
      "updateInterval": 2000,
      "showIcon": true,
      "showLabel": false,
      "showPercentage": true,
      "showFrequency": true,
      "customIcon": ""
    },
    "ram": {
      "enabled": true,
      "precision": 1,
      "updateInterval": 2000,
      "showIcon": true,
      "showLabel": false,
      "showPercentage": true,
      "showFrequency": false,
      "showTotal": true,
      "customIcon": ""
    },
    "storage": {
      "enabled": true,
      "precision": 1,
      "updateInterval": 30000,
      "showIcon": true,
      "showLabel": false,
      "showPercentage": true,
      "showBytes": true,
      "customIcon": ""
    }
  },
  "developer": {
    "debugMode": false,
    "showPerformanceMetrics": true,
    "verboseLogging": false
  },
  "clock": {
    "showDate": true,
    "dateFormat": "short"
  },
  "cpu": {
    "showFrequency": true
  },
  "workspaces": {
    "showNumbers": true,
    "showNames": true,
    "showWindowCount": true,
    "showOnlyActive": false,
    "autoHideEmpty": true,
    "showPreviews": false,
    "cornerRadius": "medium",
    "showApplicationIcons": false,
    "maxApplicationIcons": 3,
    "iconSize": "medium",
    "showIconCounts": true
  },
  "storage": {
    "showBytes": true
  },
  "audio": {
    "enabled": true,
    "showIcon": true,
    "showPercentage": true,
    "showSlider": false,
    "precision": 0
  },
  "brightness": {
    "enabled": true,
    "showIcon": true,
    "showPercentage": true,
    "showSlider": false,
    "precision": 0
  },
  "cpu_temp": {
    "enabled": true,
    "showIcon": true,
    "showValue": true,
    "showUnit": true,
    "updateInterval": 10000
  },
  "gpu_temp": {
    "enabled": true,
    "showIcon": true,
    "showValue": true,
    "showUnit": true,
    "updateInterval": 10000
  },
  "battery": {
    "enabled": true,
    "showIcon": true,
    "showPercentage": true,
    "showTime": false,
    "precision": 0
  },
  "temperature": {
    "updateInterval": 10000,
    "cpuSensor": "k10temp",
    "gpuSensor": "amdgpu",
    "thresholds": {
      "cpu": {
        "warm": 65,
        "hot": 80,
        "critical": 90
      },
      "gpu": {
        "warm": 70,
        "hot": 85,
        "critical": 95
      }
    }
  },
  "power": {
    "enabled": true,
    "showIcon": true,
    "showText": true,
    "confirmActions": true,
    "lockCommand": "hyprlock",
    "actions": {
      "lock": true,
      "logout": true,
      "suspend": true,
      "hibernate": true,
      "reboot": true,
      "poweroff": true
    },
    "shortcuts": {
      "lock": "Super+L",
      "logout": "Super+Shift+Q",
      "powerMenu": "Super+Shift+P"
    }
  }
}
